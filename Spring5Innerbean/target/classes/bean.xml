<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<bean id="studentID" class="com.abc.first.Student">     <!-- Student studentID = new Student(); -->
		<property name="address">				<!--  object type -->
			<bean id="addressID" class="com.abc.first.Address">		<!-- inner bean configuration -->
			
			<!-- inner bean == bean configured inside another bean -->
			<!-- Drawbacks of inner bean
			         1. No reusability of bean definition 
			         2. we cannot get the dependent object independently -->
				<property name="city" value="Chennai" />
			</bean>
		</property>
	</bean>
</beans>