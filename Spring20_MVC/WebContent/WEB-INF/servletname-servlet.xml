<?xml version="1.0" encoding="UTF-8"?>

<!-- beans == root tag -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

<!-- servletname-servlet is the configuration file for Spring MVC instead of bean.xml -->

<bean id="controllerID" class="com.test.mvc.ControllerClass"></bean>

<!-- Realtime usage -->
<bean id="simpleurl" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
<!-- SimpleURLHandlerMapping: matches the key with the controller -->

	<property name="mappings">
		<props>
			<prop key="/display.form">controllerID</prop>		<!-- mapped to controllerID -->
		</props>
	</property>
</bean>
</beans>