<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Spring19_FirstServlet</display-name>
<welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>servletname</servlet-name> <!-- from servletname it goes to servlet class -->
  	<servlet-class>com.test.servlet.ServletClass</servlet-class>
  	<load-on-startup>1</load-on-startup>
  	
  	<!-- load-on-startup: while loading the server itself, its object will be created
  	
  			No need of hitting the request (URL pattern) -->
  
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>servletname</servlet-name>
  	<url-pattern>/url</url-pattern>			<!-- if you hit "url" it goes into servlet name -->
  </servlet-mapping>
</web-app>