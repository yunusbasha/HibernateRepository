<?xml version="1.0" encoding="UTF-8"?>

<!-- beans == root tag -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- 2 ways to configure Spring ORM-1 :
	
		* we need to configure BasicDataSource
		* we need to configure Localsessionfactorybean
					* In this we need to configure hibernate properties
					* configure hibernate mapping
	
		Ex: A student learns Hibernate API, he again has to learn HibernateTemplate API
		
		Spring ORM-2:  requirement we need to learn Hibernate API
	 -->
	 
	<bean id="localsession"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
			<property name="configLocation" value="file:src/hibernate.cfg.xml" />
			
			<!--  path of config file -->
	</bean>
	
	<bean id="studentservice_ID" class="com.test.springjdbc.StudentService" />
</beans>