<?xml version="1.0" encoding="UTF-8"?>

<!-- beans == root tag -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<bean id="listbeanID" class="com.abc.list.ListBean">
		<property name="list" >
			<list>
				<value>Yunus</value>
				<value>Irshad</value>
				<ref bean="objectbeanID"></ref>		<!-- declare object as a list value -->
				<ref bean="innerlistbeanID"></ref>     <!-- declare list as a list value -->
			</list>
		</property>
	</bean>

<!-- Passing object as a list value CONSTRUCTOR injection -->
<!-- 	<bean id="objectbeanID" class="com.abc.list.ObjectBean">
		<constructor-arg name="name" type="java.lang.String" index="0">  industry standard to avoid ambiguity 
			<value>Yunus</value> 															index is paired with constructor fields
		</constructor-arg>
		<constructor-arg name="city" type="java.lang.String" index="1">
			<value>Chicago</value>
		</constructor-arg>
	</bean> -->
	
	<!-- Passing object as a list value SETTER injection -->
	<bean id="objectbeanID" class="com.abc.list.ObjectBean">
		<property name="name" value="Yunus"></property>
		<property name="city" value="Chicago"></property>
	</bean>

	<bean id="innerlistbeanID" class="com.abc.list.InnerListBean">
		<property name="innerlist">
			<list>
				<value>Inner Yunus</value>
				<value>Inner Irshad</value>
			</list>
		</property>
	</bean>
</beans>